{
  "name": "@2bad/iris.crm.bitrix",
  "version": "1.0.1",
  "description": "Fetch interface to get data from Bitrix REST API",
  "homepage": "https://github.com/2BAD/iris.crm.bitrix#readme",
  "twitter": "@2BAD",
  "author": "2BAD (https://github.com/2BAD)",
  "repository": {
    "type": "git",
    "url": "https://github.com/2BAD/iris.crm.bitrix.git"
  },
  "bugs": {
    "url": "https://github.com/2BAD/iris.crm.bitrix/issues"
  },
  "license": "2BAD Â© 2018",
  "keywords": [
    "api",
    "bitrix",
    "rest"
  ],
  "dependencies": {
    "@types/lodash-es": "^4.17.3",
    "got": "9.6.0",
    "lodash-es": "4.17.14"
  },
  "devDependencies": {
    "@types/got": "9.6.0",
    "@types/jest": "24.0.15",
    "@types/node": "12.6.2",
    "codecov": "3.5.0",
    "dotenv": "8.0.0",
    "jest": "24.8.0",
    "npm-run-all": "4.1.5",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.2",
    "tslint": "5.18.0",
    "tslint-config-standard": "8.0.1",
    "tslint-immutable": "6.0.1",
    "typescript": "3.5.3"
  },
  "engines": {
    "node": ">=8.1.0"
  },
  "main": "build/main/iris.crm.bitrix.js",
  "module": "build/module/iris.crm.bitrix.js",
  "typings": "build/main/iris.crm.bitrix.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc --project tsconfig.json",
    "build:main:watch": "tsc --watch --project tsconfig.json",
    "build:module": "tsc --project tsconfig.module.json",
    "clean": "rimraf build",
    "lint": "tslint --project .",
    "lint:fix": "tslint --fix --project .",
    "test": "jest --setupFiles dotenv/config",
    "test:unit": "jest --setupFiles dotenv/config --testPathIgnorePatterns __tests__/integration",
    "test:integration": "jest --setupFiles dotenv/config --testPathPattern __tests__/integration",
    "test:watch": "jest --watch --setupFiles dotenv/config --testPathIgnorePatterns __tests__/integration",
    "watch": "run-s clean build:main && run-p build:main:watch"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  }
}
